---
interface Props {
    title: string;
    description: string;
    format?: string;
    source?: string;
    design?: string;
}
const {title, description, format, source, design} = Astro.props;
---
<div class="services__wrap-container">
    <h3>{title}</h3>
    <p>{description}</p>
    <picture class={design}>
        <source srcset={`${source}.webp`} type="image/webp"/>
        <source srcset={`${source}.${format}`} type={`image/${format}`}/>
        <img src={`${source}.${format}`} alt={`${title.slice(0, 10)} Image`} />
    </picture>
    <slot/>
</div>

<style>
    .services__wrap-container {
        background-color: var(--bg-color);
        border-radius: 2rem;
        padding: 2rem;
        & h3 {
            margin: 0;
            color: var(--main-color);
        }

        & p {
            text-wrap: pretty;
            color: var(--secondary-color);
            margin: 0;
            text-transform: uppercase;
        }
    }

    .services__wrap-container:nth-child(1) {
    grid-column: 1/3;
    grid-row: 1/5;
}

.services__wrap-container:nth-child(2) {
    grid-column: 3/7;
    grid-row: 1/5;
}

.services__wrap-container:nth-child(3) {
    grid-column: 7/9;
    grid-row: 1/5;
}

.services__wrap-container:nth-child(4) {
    grid-column: 1/5;
    grid-row: 5/9;
}

.services__wrap-container:nth-child(5) {
    grid-column: 5/9;
    grid-row: 5/9;
}

.services__wrap-container:nth-child(6) {
    grid-column: 1/3;
    grid-row: 9/13;
}

.services__wrap-container:nth-child(7) {
    grid-column: 3/7;
    grid-row: 9/13;
}

.services__wrap-container:nth-child(8) {
    grid-column: 7/9;
    grid-row: 9/13;
}
</style>